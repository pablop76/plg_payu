<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="5.0" method="upgrade" group="hikashoppayment">
    <name>PLG_HIKASHOPPAYMENT_PAYU</name>
    <creationDate>2026-01-17</creationDate>
    <version>2.1.0</version>
    <author>Paweł Półtoraczyk</author>
    <authorEmail>kontakt@web-service.com.pl</authorEmail>
    <authorUrl>https://web-service.com.pl</authorUrl>
    <copyright>(C) 2026 web-service. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>PLG_HIKASHOPPAYMENT_PAYU_XML_DESCRIPTION</description>

    <namespace path="src">Pablop76\Plugin\HikashopPayment\Payu</namespace>

    <files>
        <filename plugin="payu">payu.php</filename>
        <filename>index.html</filename>
        <filename>payu_end.php</filename>
        <folder>vendor</folder>
        <folder>services</folder>
        <folder>src</folder>
        <folder>language</folder>
    </files>

    <scriptfile>script.php</scriptfile>

    <languages>
        <language tag="en-GB">language/en-GB/plg_hikashoppayment_payu.ini</language>
        <language tag="en-GB">language/en-GB/plg_hikashoppayment_payu.sys.ini</language>
        <language tag="pl-PL">language/pl-PL/plg_hikashoppayment_payu.ini</language>
        <language tag="pl-PL">language/pl-PL/plg_hikashoppayment_payu.sys.ini</language>
    </languages>

    <config>
        <fields name="params" addfieldpath="/components/com_hikashop/fields">
            <fieldset name="basic" label="PLG_HIKASHOPPAYMENT_PAYU_FIELDSET_BASIC">
                <field
                    name="pos_id"
                    type="text"
                    label="PLG_HIKASHOPPAYMENT_PAYU_POS_ID_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_POS_ID_DESC"
                    size="40"
                    filter="string"
                />
                <field
                    name="signature_key"
                    type="text"
                    label="PLG_HIKASHOPPAYMENT_PAYU_SIGNATURE_KEY_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_SIGNATURE_KEY_DESC"
                    size="40"
                    filter="string"
                />
                <field
                    name="oauth_client_id"
                    type="text"
                    label="PLG_HIKASHOPPAYMENT_PAYU_OAUTH_CLIENT_ID_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_OAUTH_CLIENT_ID_DESC"
                    size="40"
                    filter="string"
                />
                <field
                    name="oauth_client_secret"
                    type="text"
                    label="PLG_HIKASHOPPAYMENT_PAYU_OAUTH_CLIENT_SECRET_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_OAUTH_CLIENT_SECRET_DESC"
                    size="40"
                    filter="string"
                />
            </fieldset>

            <fieldset name="status" label="PLG_HIKASHOPPAYMENT_PAYU_FIELDSET_STATUS">
                <field
                    name="verified_status"
                    type="list"
                    default="confirmed"
                    label="PLG_HIKASHOPPAYMENT_PAYU_VERIFIED_STATUS_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_VERIFIED_STATUS_DESC"
                >
                    <option value="confirmed">Confirmed</option>
                    <option value="shipped">Shipped</option>
                    <option value="created">Created</option>
                </field>
                <field
                    name="invalid_status"
                    type="list"
                    default="cancelled"
                    label="PLG_HIKASHOPPAYMENT_PAYU_INVALID_STATUS_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_INVALID_STATUS_DESC"
                >
                    <option value="cancelled">Cancelled</option>
                    <option value="refunded">Refunded</option>
                </field>
            </fieldset>

            <fieldset name="advanced" label="PLG_HIKASHOPPAYMENT_PAYU_FIELDSET_ADVANCED">
                <field
                    name="sandbox"
                    type="radio"
                    default="1"
                    label="PLG_HIKASHOPPAYMENT_PAYU_SANDBOX_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_SANDBOX_DESC"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="check_status_on_return"
                    type="radio"
                    default="1"
                    label="PLG_HIKASHOPPAYMENT_PAYU_CHECK_STATUS_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_CHECK_STATUS_DESC"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="return_url"
                    type="text"
                    default=""
                    label="PLG_HIKASHOPPAYMENT_PAYU_RETURN_URL_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_RETURN_URL_DESC"
                    size="60"
                    filter="url"
                />
            </fieldset>

            <fieldset name="debug" label="PLG_HIKASHOPPAYMENT_PAYU_FIELDSET_DEBUG">
                <field
                    name="debug"
                    type="radio"
                    default="0"
                    label="PLG_HIKASHOPPAYMENT_PAYU_DEBUG_LABEL"
                    description="PLG_HIKASHOPPAYMENT_PAYU_DEBUG_DESC"
                    class="btn-group btn-group-yesno"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>