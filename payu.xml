	<namespace path="src">Pablop76\Plugin\HikashopPayment\Payu</namespace>

	<files>
		<filename plugin="payu">payu.php</filename>
		<filename>index.html</filename>
		<filename>payu_end.php</filename>
		<folder>vendor</folder>
		<folder>services</folder>
		<folder>src</folder>
		<folder>language</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/plg_hikashoppayment_payu.ini</language>
